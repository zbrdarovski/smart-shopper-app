<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="si.um.feri.thesmartshopper">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheSmartShopper">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shop.article.CheapestArticleActivity"
            android:exported="false"
            android:label="@string/title_activity_article"
            android:theme="@style/Theme.TheSmartShopper.NoActionBar" />
        <activity
            android:name=".shop.NearestShopActivity"
            android:exported="false" />
        <activity
            android:name=".recycler.SuggestActivity"
            android:exported="false" />
        <activity
            android:name=".ui.delete.DeleteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.reset.ResetActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/app_name" />
    </application>

</manifest>